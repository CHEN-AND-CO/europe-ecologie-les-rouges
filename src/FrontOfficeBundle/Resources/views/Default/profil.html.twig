{% extends "@App/template.html.twig" %}

{% block title %} Accueil {% endblock %}
{% block content %}

    <div class="container" id="profil-form">
        <h1>Editer mon profil</h1>
        <hr>
        <form action="{{path('front_office_profil', {'id': user.id})}}" method="POST">
            <div class="form-group">
                <label>Nom:</label>
                <input class="form-control" name="nom" type="text" value="{{ user.nom }}" required="" minlength="3" autofocus="">

                <label>Pr√©nom:</label>
                <input class="form-control" name="prenom" type="text" value="{{ user.prenom }}" required="" minlength="3"></div>
            <div class="form-group">
                <label>Nom de l'entreprise:</label>
                <select class="form-control" name="entreprise" value="{{ user.societe.id }}">
                    {% for societe in societes %}
                        <option value="{{ societe.id }}">{{ societe.societe }}</option>
                    {%  endfor  %}
                </select>
            <div class="form-group">
                <label>Adresse:</label>
                <input class="form-control" name="adresse" type="text" value="{{ user.adresse }}">
            </div>
            <input type="checkbox">
            <label>Changer le mot de passe</label>
            <div class="form-group" id="password-group">
                <label>Mot de passe:</label>
                <input class="form-control" name="pass1" type="password" disabled="">

                <label>Confirmer le mot de passe:</label>
                <input class="form-control" name="pass2" type="password" disabled="">
            </div>
            <div>
                <button name="submit" value="true" class="btn btn-primary">Enregistrer</button>
            </div>
            <input name="userid" value="2" type="hidden"/>
        </form>
    </div>

{% endblock %}