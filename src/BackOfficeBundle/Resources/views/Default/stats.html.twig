{% extends "@App/template.html.twig" %}

{% block title %} Accueil Statistiques {% endblock %}

{% block content %}
    <div class="container">
        <h2> Nombre d'utilisateurs par villes</h2>

        <ul>
            {% for ville in nbuserville %}
                <li> {{ ville.ville }} : {{ ville.nb_user }} utilisateurs </li>
                {% endfor %}
        </ul>

        <h2> Nombre d'utilisateurs par societés </h2>

        <ul>
            {% for societe in infosocietes %}
                <li> 
                    {{ societe.societe_name }} : {{ societe.nb_user }} utilisateurs 
                </li>
            {%  endfor  %}
        </ul>

        <h2> Nombre de km par mois et par utilisateur (sur l’année en cours) </h2>

        <ul>
            {% for deplacement in infosocietes %}
                <li>
                    {{ deplacement.societe_name }} : {{ deplacement.nb_km }} km | {{ deplacement.nb_user }} utilisateurs
                </li>
            {% endfor %}
        </ul>

        <h2> Utilisateurs </h2>

        <ul>
            {% for user in nbkmuser %}
                <li>
                    ( {{ user.societe_name }} ) {{ user.user_name }} : {{ user.nb_km }} km  
                </li>
            {% endfor %}
        </ul>

        <p> Bienvenue sur la page des stats ! </p>
    </div>
{% endblock %}